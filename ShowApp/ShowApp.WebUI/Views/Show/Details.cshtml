@model Show
@{
    ViewData["Title"] = "Show Details";
}
<div class="col-lg-9 my-4">
    <div class="row">
        <!-- Show Details -->
        <div class="card mb-3">
            <div class="card-body">
                <div class="row no-gutter">
                    <div class="col-md-4">
                        <img src="~/img/shows/@Model.Image" class="card-img" />
                    </div>
                    <div class="col-md-8">

                        <h5 class="card-title"><a>@Model.Name</a></h5>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <small class="text-muted">Date : @Model.Year</small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Category : @ViewData["Category"]</small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Genre : @ViewData["Genre"]</small>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">Oyuncular : @Model.Stars</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>

