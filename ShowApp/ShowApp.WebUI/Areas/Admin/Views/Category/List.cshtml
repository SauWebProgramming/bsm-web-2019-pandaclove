@model IEnumerable<Category>
@{
    ViewData["Title"] = "Category List";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

        <a asp-action="Add" asp-controller="Category" class="btn btn-success">Add Category</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <td><strong>ID</strong></td>
                    <td><strong>Name</strong></td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <a asp-action="Details" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                            <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
