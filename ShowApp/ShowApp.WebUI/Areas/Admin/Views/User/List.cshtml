@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "User List";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <a asp-controller="User" asp-action="Add" class="btn btn-success">Add User</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <td>User ID</td>
                    <td>User Name</td>
                    <td>User E-Mail</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>

                    @foreach(var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td width="250">
                                <form asp-route-id="@item.Id" asp-action="Delete" method="POST">
                                    <input type="submit" class="btn btn-danger" value="Sil" />
                                    <a asp-action="Details" asp-controller="User" asp-route-id="@item.Id" class="btn btn-primary">Details</a>

                                </form>
                            </td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
</div>

